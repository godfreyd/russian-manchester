{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Category",
    "description": "Category data",
    "type": "object",
    "properties": {
      "name": {
        "description": "Human readable name of category",
        "type": "string",
        "maxLength": 250
      },
      "description": {
        "description": "Human readable description of category",
        "type": "string"
      },
      "fqdn": {
        "description": "Category FQDN",
        "type": "string",
        "maxLength": 250
      },
      "sub–°ategories": {
        "description": "Subcategories",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "description": "Name of the subcategory",
              "type": "string",
              "maxLength": 250,
              "pattern": "^[A-Z]+\\d+$"
            }
          },
          "required": [
            "name"
          ],
          "additionalProperties": false
        }
      }
    },
    "required": [
      "name",
      "fqdn"
    ],
    "additionalProperties": false
  }
